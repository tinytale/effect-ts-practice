{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "es2022"
    ],
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@/*":["./src/*"],
      "@prisma/*":["./prisma/*"],
    },
  },
  "include": ["./src/**/*.ts","./models/**/*.ts","vitest.d.ts"], 
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}
