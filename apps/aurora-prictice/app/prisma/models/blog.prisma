model Blog {
  id String @id @default(uuid(7))
  userId String
  content String /// @zod.string.min(1).max(1000)
  tags   String[] @default([]) /// @zod.string.min(1).max(24).array(.max(10))

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()

  // relations
  User User @relation(fields: [userId], references: [id])
  // index
  @@unique([userId,id])
  @@index([createdAt])
  // @@index([content(ops: raw("gin_bigm_ops"))], type: Gin) 

  @@map("blogs")
} 